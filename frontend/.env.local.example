# Frontend Local Development Environment Variables
# Copy this file to .env.local and update the values

# Application Environment
REACT_APP_ENV=development
NODE_ENV=development

# API Configuration (Update these URLs for your local setup)
REACT_APP_API_URL=http://localhost:5001
REACT_APP_WS_URL=ws://localhost:5001

# Feature Flags for Development
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=false

# Development Tools
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_PERFORMANCE_MONITORING=true

# PWA Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE=false

# Security Configuration
REACT_APP_SECURE_COOKIES=false
REACT_APP_HTTPS_ONLY=false

# Development Configuration
REACT_APP_LAZY_LOADING=false
REACT_APP_IMAGE_OPTIMIZATION=false
REACT_APP_ENABLE_COMPRESSION=false

# Optional: Third-party Services for Testing
# REACT_APP_ANALYTICS_ID=
# REACT_APP_SENTRY_DSN=
# REACT_APP_HOTJAR_ID=